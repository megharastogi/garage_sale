
<%= form_for(@city) do |f| %>
  <% if @city.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@city.errors.count, "error") %> prohibited this city from being saved:</h2>

      <ul>
      <% @city.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :state_id , "State"%>
      <%=select("city", "state_id", State.all.collect {|c| [ c.name.capitalize, c.id ] }.sort)%>
    </div>
    <div class="field">
      <label>Neighborhood</label>
      <%=text_area_tag :neighborhood , @city.neighborhoods.collect{|a| a.name}.join(',') %>
      <span class="hint">(Please keep neighborhoods comma seprated)</span>
    </div>
    <%= f.submit %>
<% end %>
