<h3>Listing categories</h3>

<table class="admin_table">
  <tr>
    <th>Category Name</th>
    <th>Actions</th>
  </tr>

<% @categories.each do |category| %>
  <tr class="<%=cycle('even','odd')%>">
    <td><%=category.name %></td>
    <td><%= link_to 'Edit', edit_category_path(category) %> |
      <%= link_to 'Destroy', deactivate_category_path(category) %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Category', new_category_path , :class => "admin_button"%>
